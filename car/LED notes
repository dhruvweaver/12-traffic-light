import RPi.GPIO as GPIO
# import time # probably don't need time, this is just for time.sleep(1)

# pins
# 14 - (blue) accelerating
# 15 - (red) braking
# 17 - (yellow) connection ok
# 18 - (yellow) getting speed measurements


# setup leds
GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)
GPIO.setup(14,GPIO.OUT)
GPIO.setup(15,GPIO.OUT)
GPIO.setup(17,GPIO.OUT)
GPIO.setup(18,GPIO.OUT)

# led logic - copy into main code
# for braking
GPIO.output(15,GPIO.HIGH) # turn on brake LED
GPIO.output(14,GPIO.LOW) # turn off acceleration LED

# accelerating
GPIO.output(14,GPIO.HIGH) # turn on acceleration LED
GPIO.output(15,GPIO.LOW) # turn off brake LED

# connection ones should be clear from this
